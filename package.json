{
  "name": "openjammer",
  "version": "0.1.0-alpha",
  "description": "Browser-based node-driven music creation tool for live performance",
  "license": "AGPL-3.0",
  "author": "OpenJammer Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/PonderingBGI/openjammer.git"
  },
  "keywords": [
    "music",
    "audio",
    "web-audio",
    "live-performance",
    "node-based",
    "looper",
    "pwa"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "node -e \"if(!process.env.npm_execpath?.includes('bun')){console.error('\\x1b[31mError: Use bun to install dependencies.\\nRun: bun install\\x1b[0m');process.exit(1)}\"",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tonejs/piano": "^0.2.1",
    "idb-keyval": "^6.2.2",
    "lru-cache": "^11.2.4",
    "music-metadata": "^11.10.3",
    "react": "^19.2.0",
    "react-arborist": "^3.4.3",
    "react-dom": "^19.2.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "smplr": "^0.16.3",
    "tone": "^15.1.22",
    "use-debounce": "^10.0.6",
    "vite-plugin-pwa": "^1.2.0",
    "web-audio-beat-detector": "^8.2.32",
    "webaudiofont": "^3.0.4",
    "workbox-window": "^7.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
}
